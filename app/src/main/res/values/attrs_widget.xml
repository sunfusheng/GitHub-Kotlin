<resources>

    <declare-styleable name="LoadingView">
        <attr name="viewColor" />
        <attr name="viewSize" />
    </declare-styleable>


    <declare-styleable name="MultiStateView">
        <attr name="loadingLayout" />
        <attr name="normalLayout" />
        <attr name="errorLayout" />
        <attr name="emptyLayout" />
        <attr name="loadingState" />
    </declare-styleable>


    <declare-styleable name="RadiusWidget">
        <attr name="backgroundColor" />
        <attr name="borderColor" />
        <attr name="borderWidth" />
        <attr name="isRadiusAdjustBounds" />
        <attr name="radius" />
        <attr name="radiusTopLeft" />
        <attr name="radiusTopRight" />
        <attr name="radiusBottomLeft" />
        <attr name="radiusBottomRight" />
    </declare-styleable>


    <declare-styleable name="SVGView">
        <attr name="svgImageSizeX" format="integer" />
        <attr name="svgImageSizeY" format="integer" />
        <attr name="svgTraceTime" format="string" />
        <attr name="svgTraceTimePerGlyph" format="string" />
        <attr name="svgFillStart" format="string" />
        <attr name="svgFillTime" format="string" />
        <attr name="svgGlyphStrings" format="reference" />
        <attr name="svgTraceColors" format="reference" />
        <attr name="svgTraceResidueColors" format="reference" />
        <attr name="svgFillColors" format="reference" />
    </declare-styleable>


    <declare-styleable name="AlphaTabView">
        <attr name="tabIconNormal" format="reference" />
        <attr name="tabIconSelected" format="reference" />
        <attr name="tabText" format="string" />
        <attr name="tabTextSize" format="dimension" />
        <attr name="textColorNormal" format="color" />
        <attr name="textColorSelected" format="color" />
        <attr name="badgeBackgroundColor" format="color" />
        <attr name="drawablePadding" format="dimension" />
    </declare-styleable>


    <declare-styleable name="CircleView">
        <attr name="circleColor" />
        <attr name="circleRadius" />
        <attr name="circleBorderColor" />
        <attr name="circleBorder" />
    </declare-styleable>

    <declare-styleable name="CircleTextView" parent="CircleView">
        <attr name="viewText" />
        <attr name="viewTextColor" />
        <attr name="viewTextSize" />
    </declare-styleable>

</resources>
